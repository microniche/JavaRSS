<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fvm"
            type="com.example.javarss.FeedViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/feed_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        card_view:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feed_item_button"
                android:layout_marginEnd="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/feed_item_link"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@{fvm.link}"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.65999997"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintRight_toLeftOf="@+id/feed_item_button"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>